<div class="container">
  <div class="row">
    <% @cocktails.each do |c| %>
    <div class="col-xs-12 col-sm-4">
      <div class="card">
        <div class="card-body" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('/assets/longisland.jpg');">
          <div class="card-description">
          <h2><%= link_to c.name, cocktail_path(c) %></h2>
          </div>
          <%= image_tag "shaker.png", class: 'card-user' %>
          <%= link_to "", cocktail_path(c), class: "card-link"  %>
        </div>
        <div class="card-footer">
          <div class="card-date">
            <% doses = Dose.where(cocktail_id: c.id)  %>
            <p><%= doses.count %> Ingredients </p>
          </div>
<!--           <div class="card-links">
            <ul>
              <li><a href="#"><i class="fa fa-star"></i></a></li>
              <li><a href="#"><i class="fa fa-heart"></i></a></li>
              <li><a href="#"><i class="fa fa-share"></i></a></li>
            </ul>
          </div> -->
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
